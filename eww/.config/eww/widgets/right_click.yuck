(defwindow right_click [MON_NAME]
    :monitor MON_NAME
    :stacking "bg"
    :geometry (geometry :x "0%"
                        :y "0%"
                        :width "100%"
                        :height "100%"
                        :anchor "top left")
    (eventbox
        :onrightclick "pkill -x rofi || rofi -show combi &"
    )
)
